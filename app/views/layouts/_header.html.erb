<header class="nav">
  <div class='container'>
    <%= link_to "forum", root_path %>
    <nav>
      <ul>
        <li><%= link_to 'Home', root_path %></li>
        <% if current_user %>
          <li>Logged in as <%= current_user.username %> <small><%= link_to 'Log out', session_path('dummy'), method: :delete %></small></li>
