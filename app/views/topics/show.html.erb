<div id='new-post'>
  <%= link_to 'New Post', new_post_path %>
</div>

<div id='posts'>
  <table>
    <% @topic.posts.order("created_at ASC").each do |post| %>
      <tr>
        <td><%= post.user.username %></td>
      </tr>
      <tr>
        <td>On <%= post.created_at.in_time_zone(-8) %></td>
      </tr>
      <tr>
        <td><%= post.content %></td>
      </tr>
    <% end %>
  </table>
</div>
